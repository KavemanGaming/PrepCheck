# Web (Next.js)
NEXT_PUBLIC_APP_NAME=PrepCheck

# API (NestJS)
API_PORT=4000
NODE_ENV=development

# Database / Redis
DATABASE_URL=postgres://postgres:postgres@localhost:5432/prepcheck
REDIS_URL=redis://localhost:6379

# Firebase Admin (use env vars or default credentials)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com
# Note: escape newlines as \n if embedding in env
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
# Dev/test helpers
DEV_AUTH_BYPASS=1
TEST_AUTH=headers
